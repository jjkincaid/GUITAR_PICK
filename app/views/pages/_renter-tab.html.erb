    <div class="row m-3 tile">
      <h2 class="pt-5">Renter</h2>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Accepted</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Pending</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Declined</button>
        </li>
      </ul>


      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active my-3" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
          <% if @renter_accepted_rentals.count > 0 %>
            <%= render partial: 'pages/accepted-bookings-grid'%>
          <% else %>
            <p>You don't have accepted rentals</p>
          <% end %>
        </div>
        <div class="tab-pane fade my-3" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
          <% if @renter_pending_rentals.count > 0 %>
            <%= render partial: 'pages/pending-bookings-grid'%>
          <% else %>
            <p>You don't have pending rentals</p>
        <% end %>
        </div>
        <div class="tab-pane fade my-3" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
          <% if @renter_declined_rentals.count > 0 %>
            <%= render partial: 'pages/declined-bookings-grid'%>
          <% else %>
            <p>You don't have declined rentals</p>
        <% end %>
        </div>

      </div>
