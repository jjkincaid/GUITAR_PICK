

<div class="row">
  <!--Left Menu-->
  <div class="col-2 left-menu align-self-start d-flex flex-column position-sticky">
    <div class="d-flex flex-column justify-content-center pt-3">
      <div class="d-flex justify-content-center">
        <%= image_tag"kisspng-login-google-account-computer-icons-user-activity-5ac6bbe74aa7f1.6157264215229736713058.png", width:50, class:"avatar justify-content-center"%>
      </div>
      <div class="d-flex justify-content-center">
        <h3 class="mt-3">Hello <%= current_user.username%> !</h3>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <ul class="p-0 mt-3">
        <li>
          <%= link_to "Add a guitar", new_guitar_path %>
        </li>
        <li>
          <%= link_to "Logout", destroy_user_session_path, 'data-turbo-method': :delete  %>
        </li>
      </ul>
    </div>
  </div>

  <div class="col-10">
    <div class="container">
      <div class="row m-3 gx-5">
        <!--Listed Guitars-->
        <div class="col-8 ps-0">
          <div class="tile">
            <h2>Your listed guitars</h2>
            <% if current_user.guitars.count > 0 %>
              <%= render partial: 'pages/guitars-rentals-grid'%>
            <% else %>
              <p>Sorry, you don't have any guitars!</p>
              <%= link_to "Add a guitar", new_guitar_path %>
            <% end  %>
          </div>
        </div>
        <!--Upcoming booking / Last one -->
        <div class="col-4 tile">
          <h2>Upcoming booking</h2>
          <div class="card-guitar">
            <%= cl_image_tag @renter_accepted_rentals.last.guitar.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-guitar-infos">
              <div>
                <h2><%= @renter_accepted_rentals.last.guitar.name %></h2>
                <p class="mt-2"><%= @renter_accepted_rentals.last.guitar.category %> - <%= @renter_accepted_rentals.last.guitar.brand %> - <i class="fa-solid fa-location-dot"></i> <%= @renter_accepted_rentals.last.guitar.address %></p>
                <p>Start date: <%= @renter_accepted_rentals.last.starting_date %></p>
                <p>End date: <%= @renter_accepted_rentals.last.end_date %></p>
              </div>
              <div class="d-flex flex-column align-items-end m-2">
                <h2 class="card-trip-pricing m-2"> <%= @renter_accepted_rentals.last.guitar.daily_price %>â‚¬/day</h2>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!--Owner tab -->
      <%= render partial: 'pages/owner-tab' if current_user.guitars.count > 0%>

      <!--Renter tab -->
      <%= render partial: 'pages/renter-tab'%>

    </div>
  </div>
</div>





