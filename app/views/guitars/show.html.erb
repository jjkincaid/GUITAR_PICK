<div class="container m-2"></div>

  <div class="main-grid">
    <div class="guitar-show-div m-5">
      <h2><%= @guitar.name %></h2>
      <p><%= @guitar.category %> - <%= @guitar.brand %> - <i class="fa-solid fa-location-dot"></i> <%= @guitar.location %></p>
      <% if @guitar.photo.attached? %>
        <%= cl_image_tag guitar.photo.key, height: 400, width: 400, crop: :fill %>
        <%else %>
        <img src="https://images.unsplash.com/photo-1609702839586-e9b637bb93b9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=715&q=80" alt="">
        <% end %>
      <div class="container mt-3">
        <h4>Description</h4>
        <p><%= @guitar.description%></p>
      </div>
    </div>
    <div class="booking-show-div d-inline-flex p-2 mt-5">
      <%= render "book", rental: @rental, guitar: @guitar %>
    </div>
  </div>
</div>



<div>
  <%=link_to "EDIT", edit_guitar_path(@guitar)%>
  <%= button_to "Delete Guitar", @guitar, method: :delete, class: "btn btn-danger  text-color-white mt-3" %>
</div>
