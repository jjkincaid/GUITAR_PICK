<%= simple_form_for(@guitar) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, collection: Guitar::CATEGORIES, label:"Select a category" %>
    <%= f.input :brand, collection: Guitar::BRANDS, label:"Select a brand" %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :daily_price %>
    <%= f.input :photo, as: :file %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
