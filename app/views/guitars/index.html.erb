
<div class="container">
  <diV class="row">
    <%= form_with url: guitars_path, method: :get, class: "d-flex pt-5 py-5 justify-content-center" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "search",
        placeholder: "Find a guitar"
      %>
      <%= submit_tag "Search", class: "btn-guitar-main" %>
    <% end %>
  </div>
</div>

<%= render partial: 'guitars/guitar-grid'%>

<div class="container pt-5">
    <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
