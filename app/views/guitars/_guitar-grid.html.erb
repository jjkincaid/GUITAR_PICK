  <div class="guitars m-3">
    <% @guitars.each do |guitar| %>
      <div class="card-guitar">
        <% if guitar.photo.attached? %>
        <%= cl_image_tag guitar.photo.key, height: 300, width: 400, crop: :fill %>
        <%else %>
        <img src="https://images.unsplash.com/photo-1609702839586-e9b637bb93b9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=715&q=80" alt="">
        <% end %>


        <div class="card-guitar-infos">
          <div>
            <h2><%= guitar.name %></h2>
            <p class="mt-2"><%= guitar.category %> - <%= guitar.brand %> - <i class="fa-solid fa-location-dot"></i> <%= guitar.location %></p>
            <p class="mt-2"><%= guitar.description %></p>
            <p class="mt-2">Listed by <%= guitar.user.username %></p>
          </div>
          <div class="d-flex flex-column align-items-end m-2">
            <h2 class="card-trip-pricing m-2"> <%= guitar.daily_price %>â‚¬/day</h2>
            <%= link_to "Pick", guitar_path(guitar), class:"btn btn-primary" %>

          </div>
          <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> %>
        </div>

          <%#= button_to guitar_path(guitar) %>

      </div>
    <% end %>
  </div>
</div>
